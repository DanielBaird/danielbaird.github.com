{% comment %}
assign into a 'item' variable, then include this file to render an item summary.
{% endcomment %}

<article>
<h1><a href="{{ item.url }}">{{ item.title }}</a></h1>
{% if item.summary %}
    {% capture summary_plus_more_link %}{{ item.summary }} &nbsp; "(morelink)more":{{ item.url }}{% endcapture %}
    {{ summary_plus_more_link | textilize }}
{% else %}
    <a class="morelink" href="{{ item.url }}">more</a>
{% endif %}
</article>